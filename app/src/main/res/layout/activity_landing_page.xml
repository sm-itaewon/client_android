<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".B_Landing.LandingPageActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="395dp"
            android:layout_height="286dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <Button
                android:text="찾아보기"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/but_search" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        <Button
                android:text="내 트립보드"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/but_mypage" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>